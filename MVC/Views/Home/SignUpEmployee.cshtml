@model MVC.Models.EmployeeModel

@{
    ViewData["Title"] = "SignUpEmployee";
}

<h1>Welcome!</h1>

<h4>Add New Employee</h4>
<hr />
<br/>
<div class="row">
    <div class="col-md-12">
        <form asp-action="SignUpEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FirstName" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger col-4"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger col-4"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger col-4"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger col-4"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Position" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Position" class="form-control" />
                </div>
                <span asp-validation-for="Position" class="text-danger col-4"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Salary" class="control-label col-2"></label>
                <div class="col-4">
                    <input asp-for="Salary" class="form-control" />
                </div>
                <span asp-validation-for="Salary" class="text-danger col-4"></span>
            </div>
            <br/>
            <div class="form-group row text-center">
                <div class="col-6 text-center">
                    <a href="/Home" class="btn btn-primary col-2">Home</a>
                    <label class="col-1"></label>
                    <input type="submit" value="Create" class="btn btn-primary col-2" />
                </div>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
